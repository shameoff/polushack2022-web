<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <FrameLayout
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="2dp">
        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/history_ellipse"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/bold_border"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="8dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingTop="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/stem_medium"
            android:textColor="@color/text"/>
<!--        <TextView-->
<!--            android:id="@+id/description"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/stem_font"-->
<!--            android:textColor="@color/text"-->
<!--            android:paddingBottom="8dp"-->
<!--            android:visibility="gone"/>-->
        <include
            android:id="@+id/description"
            layout="@layout/task_card"
            android:visibility="gone"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/area_near_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/button"
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:background="@drawable/history_arrow"/>
    </FrameLayout>
</LinearLayout>